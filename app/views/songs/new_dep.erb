<h2>Make a New Song</h2>
<form method="POST" action="/songs">
  <label for="artist_name">Artist Name</label>
  <input type="text" name="artist[name]" id="artist_name"> <br>

  <label for="name">Song Name</label>
  <input type="text" name="song[name]" id="song_name"> <br> <br>

  <label> Genres </label> <br>
  <% Genre.all.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %><br><label><%= genre.name %></label>
  <% end %>
  <br>
  <input type="submit" value="Create">
</form>